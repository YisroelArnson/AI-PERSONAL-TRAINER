{
  "designSystem": {
    "name": "AI Fitness Trainer — Unified Design System",
    "version": "3.0",
    "description": "A comprehensive, ultra-minimal flat design system for an AI-powered fitness trainer app supporting both strength training and running workouts. Text-driven interface with inline stat highlights. The AI orb is the only element with depth and color.",

    "designPrinciples": {
      "textFirst": "Information is delivered through natural language with inline highlights, not separate UI components. The AI speaks to you in sentences, not cards.",
      "flatness": "No shadows, no borders, no 3D effects on UI elements. Depth is reserved exclusively for the AI orb.",
      "monochromeUI": "The interface is purely black and white. The only color comes from the AI orb's sky blue gradient and the running route on maps.",
      "colorContrast": "Elements are distinguished by subtle shifts in background color, not by outlines or elevation.",
      "signatureElement": "The AI orb is the single point of visual richness — it earns attention by being the only element with glow and gradient.",
      "contextualUI": "The bottom bar adapts to context: home shows workout pill + orb, exercise shows edit + done + orb, running shows pause + stop.",
      "restraint": "If it doesn't need to be there, remove it. Every element must justify its existence.",
      "unifiedExperience": "Strength training and cardio share the same visual language, creating a cohesive experience across workout types."
    },

    "color": {
      "dark": {
        "background": "#000000",
        "surface": "#111111",
        "surfaceHover": "#1A1A1A",
        "mapBackground": "#0a0a0a",
        "text": {
          "primary": "#FFFFFF",
          "secondary": "rgba(255, 255, 255, 0.6)",
          "tertiary": "rgba(255, 255, 255, 0.4)"
        },
        "divider": "rgba(255, 255, 255, 0.08)",
        "accent": "#FFFFFF",
        "highlight": "rgba(255, 255, 255, 0.1)",
        "danger": "#FF3B30",
        "mapGrid": "rgba(255, 255, 255, 0.1)",
        "mapStreets": "rgba(255, 255, 255, 0.15)"
      },
      "light": {
        "background": "#FFFFFF",
        "surface": "#F5F5F7",
        "surfaceHover": "#EBEBED",
        "mapBackground": "#E8E8E8",
        "text": {
          "primary": "#000000",
          "secondary": "rgba(0, 0, 0, 0.6)",
          "tertiary": "rgba(0, 0, 0, 0.4)"
        },
        "divider": "rgba(0, 0, 0, 0.06)",
        "accent": "#000000",
        "highlight": "rgba(0, 0, 0, 0.06)",
        "danger": "#FF3B30",
        "mapGrid": "rgba(0, 0, 0, 0.08)",
        "mapStreets": "rgba(0, 0, 0, 0.1)"
      },
      "orb": {
        "description": "The AI orb is the ONLY element with color, gradient, and glow in the entire UI.",
        "gradientCSS": "radial-gradient(ellipse at 30% 20%, rgba(255,255,255,0.9) 0%, transparent 50%), radial-gradient(ellipse at 70% 80%, rgba(0,150,255,0.8) 0%, transparent 50%), radial-gradient(ellipse at 50% 50%, rgba(100,180,255,0.9) 0%, rgba(30,144,255,1) 60%, rgba(0,100,200,1) 100%)",
        "glow": "0 3px 12px rgba(30,144,255,0.3)"
      },
      "route": {
        "description": "The running route uses the same blue as the orb, creating visual connection.",
        "gradientCSS": "linear-gradient(to bottom right, #64B4FF, #1E90FF)",
        "startColor": "#64B4FF",
        "endColor": "#1E90FF",
        "currentPosition": "#1E90FF",
        "currentPositionPulse": "rgba(30, 144, 255, 0.3)"
      }
    },

    "typography": {
      "fontFamily": "'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "scale": {
        "heroStat": {
          "size": "42px",
          "weight": 700,
          "letterSpacing": "-0.02em",
          "fontVariantNumeric": "tabular-nums",
          "usage": "Primary running stats (time, distance)"
        },
        "largeStat": {
          "size": "32px",
          "weight": 700,
          "letterSpacing": "-0.02em",
          "usage": "Post-run summary primary stats"
        },
        "statNumber": {
          "size": "24px",
          "weight": 700,
          "letterSpacing": "-0.02em",
          "usage": "Profile stats, workout detail stats"
        },
        "mediumStat": {
          "size": "20px",
          "weight": 700,
          "usage": "Secondary running stats (pace, calories, heart rate)"
        },
        "largeStat2": {
          "size": "18px",
          "weight": 700,
          "usage": "Workout detail stats, menu items"
        },
        "screenTitle": {
          "size": "17px",
          "weight": 600,
          "usage": "Screen titles in headers"
        },
        "aiMessageLarge": {
          "size": "19px",
          "weight": 400,
          "lineHeight": 1.55,
          "usage": "Home screen AI-generated message"
        },
        "aiMessageMedium": {
          "size": "16px",
          "weight": 400,
          "lineHeight": 1.55,
          "usage": "AI summaries, pre-run message, exercise coaching"
        },
        "profileName": {
          "size": "18px",
          "weight": 600,
          "usage": "User name on profile"
        },
        "cardTitle": {
          "size": "15px",
          "weight": 600,
          "usage": "Workout card titles, exercise names, menu item labels"
        },
        "button": {
          "size": "15px",
          "weight": 600,
          "usage": "Primary button labels (Start Run, Done)"
        },
        "buttonSmall": {
          "size": "14px",
          "weight": 600,
          "usage": "Secondary button labels"
        },
        "aiCoachingInline": {
          "size": "14px",
          "weight": 400,
          "lineHeight": 1.5,
          "usage": "AI coaching card during run"
        },
        "bodyText": {
          "size": "14px",
          "weight": 400,
          "usage": "Run details, form fields"
        },
        "cardSubtitle": {
          "size": "13px",
          "weight": 400,
          "usage": "Secondary info on cards, suggested prompts"
        },
        "label": {
          "size": "12px",
          "weight": 500,
          "textTransform": "uppercase",
          "letterSpacing": "0.03em",
          "usage": "Section labels, date labels, stat labels"
        },
        "labelSmall": {
          "size": "11px",
          "weight": 500,
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "usage": "Running stat labels"
        },
        "labelTiny": {
          "size": "10px",
          "weight": 400,
          "textTransform": "uppercase",
          "letterSpacing": "0.03em",
          "usage": "Secondary running stat labels"
        },
        "pillText": {
          "size": "14px",
          "weight": 500,
          "usage": "Workout pill text, muscle/goal pills"
        },
        "splitNumber": {
          "size": "13px",
          "weight": 600,
          "usage": "Mile split numbers"
        }
      }
    },

    "spacing": {
      "scale": {
        "xs": "4px",
        "sm": "6px",
        "md": "8px",
        "lg": "10px",
        "xl": "12px",
        "2xl": "14px",
        "3xl": "16px",
        "4xl": "20px",
        "5xl": "24px"
      },
      "screenPadding": {
        "horizontal": "20px",
        "top": "16px",
        "bottom": "24px"
      },
      "gaps": {
        "bottomBarItems": "10px",
        "cardList": "8px",
        "statsGrid": "8px",
        "modalItems": "4px",
        "pillTags": "8px",
        "setItems": "6px",
        "splitItems": "6px"
      }
    },

    "borderRadius": {
      "scale": {
        "small": "7px",
        "medium": "11px",
        "large": "15px",
        "pill": "44px",
        "full": "50%",
        "modal": "20px"
      },
      "usage": {
        "cards": "large (15px)",
        "statsCards": "medium (11px) for small, large (15px) for big",
        "buttons": "pill (44px)",
        "inputs": "medium (11px)",
        "iconButtons": "full (50%)",
        "modalSheet": "modal (20px) on top corners",
        "statHighlights": "4px",
        "avatar": "full (50%)",
        "mapContainer": "large (15px)",
        "pillTags": "pill (44px)"
      }
    },

    "shadows": {
      "philosophy": "No shadows on UI elements. Exceptions: AI orb and floating buttons over map.",
      "ui": "none",
      "orb": "0 3px 12px rgba(30,144,255,0.3)",
      "floatingButton": "0 2px 8px rgba(0,0,0,0.15)"
    },

    "borders": {
      "philosophy": "No borders on any elements. Distinction comes from background color alone.",
      "ui": "none"
    },

    "components": {
      "statHighlight": {
        "description": "Inline highlighted text for numbers and key data within AI messages.",
        "properties": {
          "display": "inline-flex",
          "padding": "0px 5px",
          "background": "highlight",
          "borderRadius": "4px",
          "fontWeight": 600
        },
        "usage": "Wrap numbers, exercise names, percentages, distances, paces, and key stats in flowing text"
      },
      "aiOrb": {
        "description": "The signature AI element. The ONLY component with gradient, glow, and color.",
        "sizes": {
          "tiny": "24px",
          "small": "32px",
          "medium": "36px",
          "standard": "50px",
          "large": "56px",
          "hero": "100px"
        },
        "properties": {
          "borderRadius": "full",
          "border": "none",
          "background": "orb.gradientCSS",
          "boxShadow": "orb.glow"
        },
        "interactions": {
          "tap": "Opens chat or triggers action",
          "tapAndHold": "Activates voice input",
          "hover": "scale(1.05)"
        },
        "usage": {
          "tiny": "Section headers (Why This Exercise)",
          "small": "AI coaching card during run",
          "medium": "Post-run summary AI message",
          "standard": "Bottom bar, navigation",
          "large": "Pre-run start button area",
          "hero": "Chat screen center"
        }
      },
      "workoutPill": {
        "description": "Pill-shaped button showing current workout with play icon.",
        "properties": {
          "display": "flex",
          "alignItems": "center",
          "gap": "11px",
          "padding": "10px 10px 10px 16px",
          "background": "surface",
          "borderRadius": "pill",
          "border": "none"
        },
        "children": {
          "text": {
            "format": "{workoutName} ({duration})",
            "fontSize": "14px",
            "fontWeight": 500,
            "overflow": "scrolling animation if too long"
          },
          "playButton": {
            "size": "32px",
            "background": "accent",
            "iconSize": "12px",
            "iconColor": "background"
          }
        }
      },
      "iconButton": {
        "description": "Circular button with icon (menu, close, back, edit, stop).",
        "sizes": {
          "standard": { "width": "44px", "height": "44px", "iconSize": "18px" },
          "medium": { "width": "50px", "height": "50px", "iconSize": "20px" },
          "large": { "width": "56px", "height": "56px", "iconSize": "20px" }
        },
        "properties": {
          "borderRadius": "full",
          "background": "surface",
          "border": "none",
          "color": "text.primary"
        },
        "variants": {
          "floating": {
            "background": "background",
            "boxShadow": "floatingButton"
          }
        }
      },
      "primaryButton": {
        "description": "Main action button (Start Run, Done, Pause, Resume).",
        "properties": {
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "gap": "8px",
          "padding": "16px 20px",
          "background": "accent",
          "color": "background",
          "border": "none",
          "borderRadius": "pill",
          "fontSize": "15px",
          "fontWeight": 600
        },
        "variants": {
          "small": {
            "padding": "12px 20px",
            "fontSize": "14px"
          }
        },
        "withIcon": {
          "iconSize": "16-18px",
          "gap": "8-10px"
        }
      },
      "progressBar": {
        "description": "Thin horizontal progress indicator for strength workouts.",
        "properties": {
          "height": "3px",
          "background": "surface",
          "borderRadius": "2px"
        },
        "fill": {
          "background": "text.primary",
          "borderRadius": "2px"
        }
      },
      "expandingFab": {
        "description": "Menu button that expands to reveal navigation icons.",
        "position": "top-left",
        "direction": "expands downward",
        "mainButton": {
          "size": "44px",
          "icon": "menu (2 lines) or close (X)",
          "iconSize": "18px"
        },
        "expandedItems": {
          "size": "40px",
          "spacing": "48px vertical",
          "icons": ["history (clock)", "profile (user)"],
          "animation": "staggered fade + slide, 50ms delay each"
        }
      },
      "bottomSheet": {
        "description": "Modal that slides up from bottom for contextual actions.",
        "properties": {
          "background": "background",
          "borderTopLeftRadius": "20px",
          "borderTopRightRadius": "20px",
          "padding": "12px 20px 32px"
        },
        "handle": {
          "width": "36px",
          "height": "4px",
          "background": "text.tertiary",
          "borderRadius": "2px",
          "marginBottom": "20px"
        },
        "backdrop": {
          "background": "rgba(0,0,0,0.4)"
        }
      },
      "modalListItem": {
        "description": "Tappable row in bottom sheet modal.",
        "properties": {
          "display": "flex",
          "alignItems": "center",
          "gap": "14px",
          "padding": "14px 16px",
          "background": "surface",
          "border": "none",
          "borderRadius": "medium"
        },
        "icon": {
          "size": "20px",
          "color": "text.secondary"
        },
        "label": {
          "fontSize": "15px",
          "fontWeight": 500,
          "color": "text.primary"
        },
        "destructive": {
          "iconColor": "#FF3B30",
          "labelColor": "#FF3B30"
        }
      },
      "workoutCard": {
        "description": "Card displaying a past workout in history.",
        "properties": {
          "padding": "16px",
          "background": "surface",
          "borderRadius": "large",
          "marginBottom": "8px"
        },
        "children": {
          "dateLabel": {
            "fontSize": "12px",
            "fontWeight": 500,
            "color": "text.tertiary",
            "textTransform": "uppercase",
            "letterSpacing": "0.03em"
          },
          "title": {
            "fontSize": "15px",
            "fontWeight": 600,
            "color": "text.primary"
          },
          "subtitle": {
            "fontSize": "13px",
            "color": "text.secondary",
            "format": "{duration} · {type === 'run' ? 'Run' : '{exercises} exercises'}"
          },
          "checkmark": {
            "size": "16px",
            "strokeWidth": 2.5,
            "color": "text.secondary"
          }
        },
        "states": {
          "completed": { "opacity": 1 },
          "inProgress": { "opacity": 0.6 }
        }
      },
      "statCard": {
        "description": "Card displaying a single stat.",
        "sizes": {
          "small": {
            "padding": "12px",
            "borderRadius": "medium",
            "valueSize": "18-20px",
            "labelSize": "10-11px"
          },
          "medium": {
            "padding": "14px",
            "borderRadius": "medium",
            "valueSize": "18px",
            "labelSize": "11px"
          },
          "large": {
            "padding": "16-20px",
            "borderRadius": "large",
            "valueSize": "24-32px",
            "labelSize": "12px"
          }
        },
        "properties": {
          "background": "surface",
          "textAlign": "center"
        },
        "children": {
          "value": {
            "fontWeight": 700,
            "letterSpacing": "-0.02em",
            "color": "text.primary"
          },
          "label": {
            "color": "text.tertiary",
            "textTransform": "uppercase",
            "letterSpacing": "0.03em"
          }
        }
      },
      "menuItem": {
        "description": "Tappable row in profile settings menu or run details.",
        "properties": {
          "display": "flex",
          "alignItems": "center",
          "gap": "14px",
          "padding": "14px 16px",
          "background": "surface",
          "borderRadius": "large or medium",
          "marginBottom": "8px"
        },
        "withIcon": {
          "iconSize": "20px",
          "iconColor": "text.secondary"
        },
        "withChevron": {
          "chevronSize": "16px",
          "chevronColor": "text.tertiary"
        },
        "content": {
          "label": {
            "fontSize": "15px",
            "fontWeight": 500,
            "color": "text.primary"
          },
          "subtitle": {
            "fontSize": "13px",
            "color": "text.tertiary"
          }
        },
        "simpleRow": {
          "justifyContent": "space-between",
          "leftText": {
            "fontSize": "14px",
            "color": "text.secondary"
          },
          "rightText": {
            "fontSize": "14px",
            "fontWeight": 600,
            "color": "text.primary"
          }
        }
      },
      "avatar": {
        "description": "User avatar on profile screen.",
        "properties": {
          "size": "64px",
          "borderRadius": "full",
          "background": "surface"
        },
        "placeholder": {
          "fontSize": "24px",
          "fontWeight": 600,
          "color": "text.secondary"
        }
      },
      "chatInput": {
        "description": "Text input for messaging the AI.",
        "properties": {
          "flex": 1,
          "background": "surface",
          "borderRadius": "medium",
          "padding": "14px 16px",
          "fontSize": "15px"
        },
        "placeholder": "Ask anything...",
        "micButton": {
          "size": "50px",
          "background": "surface",
          "borderRadius": "medium",
          "icon": "microphone",
          "iconSize": "20px"
        }
      },
      "suggestedPromptChip": {
        "description": "Quick action chip on chat screen.",
        "properties": {
          "padding": "10px 14px",
          "background": "surface",
          "borderRadius": "medium",
          "fontSize": "13px",
          "fontWeight": 500,
          "color": "text.secondary"
        }
      },
      "pillTag": {
        "description": "Pill-shaped tag for muscles and goals.",
        "properties": {
          "padding": "8px 12px",
          "background": "surface",
          "borderRadius": "pill",
          "fontSize": "13px",
          "fontWeight": 500,
          "color": "text.primary"
        }
      },
      "setRow": {
        "description": "Row displaying a single set in exercise detail.",
        "properties": {
          "display": "flex",
          "alignItems": "center",
          "gap": "12px",
          "padding": "12px 16px",
          "background": "surface",
          "borderRadius": "medium",
          "marginBottom": "6px"
        },
        "children": {
          "number": {
            "width": "24px",
            "height": "24px",
            "borderRadius": "full",
            "background": "highlight",
            "fontSize": "12px",
            "fontWeight": 600
          },
          "reps": {
            "fontSize": "15px",
            "fontWeight": 500,
            "flex": 1
          },
          "weight": {
            "fontSize": "15px",
            "color": "text.secondary"
          },
          "checkmark": {
            "size": "16px",
            "color": "text.secondary"
          }
        }
      },
      "splitRow": {
        "description": "Row displaying a mile split in post-run summary.",
        "properties": {
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "center",
          "padding": "12px 16px",
          "background": "surface",
          "borderRadius": "medium",
          "marginBottom": "6px"
        },
        "children": {
          "mileNumber": {
            "width": "28px",
            "height": "28px",
            "borderRadius": "full",
            "background": "highlight",
            "fontSize": "13px",
            "fontWeight": 600
          },
          "time": {
            "fontSize": "15px",
            "fontWeight": 600
          },
          "comparison": {
            "fontSize": "12px",
            "color": "text.secondary"
          }
        }
      },
      "runningMap": {
        "description": "Map visualization for running workouts.",
        "properties": {
          "borderRadius": "large (when contained) or none (when full-width)",
          "overflow": "hidden"
        },
        "layers": {
          "background": "mapBackground",
          "grid": {
            "pattern": "40px squares",
            "stroke": "mapGrid",
            "strokeWidth": 1,
            "opacity": 0.3
          },
          "streets": {
            "stroke": "mapStreets",
            "strokeWidth": 8
          },
          "route": {
            "stroke": "route.gradientCSS",
            "strokeWidth": 4,
            "strokeLinecap": "round",
            "strokeLinejoin": "round"
          },
          "startPoint": {
            "outerCircle": { "radius": 8, "fill": "text.primary" },
            "innerCircle": { "radius": 4, "fill": "background" }
          },
          "currentPosition": {
            "pulse": { "radius": "12-18px animated", "fill": "route.currentPositionPulse" },
            "dot": { "radius": 6, "fill": "route.currentPosition" }
          }
        }
      },
      "aiCoachingCard": {
        "description": "Card showing AI coaching message during run.",
        "properties": {
          "display": "flex",
          "alignItems": "flex-start",
          "gap": "12px",
          "padding": "14px 16px",
          "background": "surface",
          "borderRadius": "large"
        },
        "children": {
          "orb": { "size": "32px" },
          "message": {
            "fontSize": "14px",
            "fontWeight": 400,
            "lineHeight": 1.5,
            "flex": 1
          }
        }
      }
    },

    "screens": {
      "home": {
        "layout": [
          "Top-left: Expanding FAB menu (drops down to History, Profile)",
          "Middle: AI message with inline stat highlights",
          "Bottom: Workout pill (left/center) + AI orb (right)"
        ],
        "aiMessage": {
          "content": "Dynamic, AI-generated summary of user's progress",
          "example": "You've completed [3 workouts] this week. Your push strength is up [12%] from last month. Day [12] of your streak. Let's keep building.",
          "highlightedItems": ["workout count", "strength change %", "streak days"]
        }
      },
      "strengthExercise": {
        "layout": [
          "Top-left: Close (X) button",
          "Top-center: Progress text (e.g., '2 of 6')",
          "Below header: Thin progress bar",
          "Middle: AI coaching message with inline highlights",
          "Bottom-left: Edit (pencil) button",
          "Bottom-center: Done button with checkmark",
          "Bottom-right: AI orb"
        ],
        "aiMessage": {
          "content": "Exercise instructions and coaching tips in natural language",
          "example": "[Dumbbell Bench Press] — Set [2] of [3]. Aim for [10-12 reps] at [25 lb]. Keep your shoulder blades pinched together throughout."
        },
        "editModal": {
          "trigger": "Pencil icon button",
          "options": ["Swap exercise", "Adjust exercise", "Skip", "Delete exercise (destructive)"]
        }
      },
      "preRun": {
        "layout": [
          "Top: Back button + 'Outdoor Run' title",
          "Below header: AI message with goal, weather, target pace",
          "Middle: Map preview (contained, rounded)",
          "Below map: Run details list (Type, Target Distance, Est. Duration)",
          "Bottom: Start Run button + AI orb"
        ],
        "aiMessage": {
          "example": "Today's goal: [3 mile easy run]. Weather is [62°F] and clear — perfect conditions. Your target pace is [10:30-11:00 /mi]."
        }
      },
      "running": {
        "layout": [
          "Top 45%: Full-width map with route",
          "Floating: Close button (top-left over map)",
          "Stats area: Primary stats (Time, Distance) large",
          "Below: Secondary stats grid (Pace, Calories, Heart Rate)",
          "Below: AI coaching card",
          "Bottom: Pause/Resume button + Stop button"
        ],
        "primaryStats": {
          "time": { "fontSize": "42px", "label": "Time" },
          "distance": { "fontSize": "42px", "label": "Distance", "unit": "mi" }
        },
        "secondaryStats": {
          "layout": "3-column grid",
          "items": ["Pace /mi", "Calories", "Heart Rate"]
        },
        "controls": {
          "pauseResume": {
            "states": ["Pause (with pause icon)", "Resume (with play icon)"],
